# {{ ansible_managed }}

# Because we are using logrotate for greater flexibility, disable the
# internal certbot logrotation.
max-log-backups = 0

{% if ubuntu_1804_letsencrypt_admin_email %}
email = {{ ubuntu_1804_letsencrypt_admin_email }}
{% endif %}

authenticator = {{ ubuntu_1804_letsencrypt_authenticator }}

{% if ubuntu_1804_letsencrypt_http_01_port is defined %}
http-01-port = {{ ubuntu_1804_letsencrypt_http_01_port }}
{% endif %}

{% if ubuntu_1804_letsencrypt_http_01_address is defined %}
http-01-address = {{ ubuntu_1804_letsencrypt_http_01_address }}
{% endif %}

{% if ubuntu_1804_letsencrypt_webroot_path is defined %}
webroot-path = {{ ubuntu_1804_letsencrypt_webroot_path }}
{% endif %}

{% if ubuntu_1804_letsencrypt_deploy_hook is defined %}
deploy-hook = {{ ubuntu_1804_letsencrypt_deploy_hook }}
{% endif %}

agree-tos = True

keep-until-expiring = True
expand = True
non-interactive = True
